{
    "manifest_version": 3,
    "name": "NoScrolling",
    "description": "Get rid of unnecessary youtube content",
    "version": "1.0",
    "host_permissions": [
        "https://*/*"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
